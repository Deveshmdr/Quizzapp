<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/aa"
    tools:context=".QuizActivity">
    <!-- Question 1-->

    <TextView
        style="@style/questionStyle"
        android:text="1. Who is honored as Father of Modern Chemistry?"
        android:textColor="@color/colorPrimaryDark"/>

    <RadioGroup
        android:id="@+id/num_one_radio_group"
        style="@style/radio_group">

        <RadioButton
            android:id="@+id/Antoine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Antoine Lavoisier" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dmitri Mendeleev" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dmitri Mendeleev" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dmitri Mendeleev" />
    </RadioGroup>

    <!-- Question 2-->

    <TextView
        style="@style/questionStyle"
        android:text="2. Who invented periodic table?"
        android:textColor="@color/colorPrimaryDark"/>

    <RadioGroup style="@style/radio_group"
        android:id="@+id/num_two_radio_group"
        >

        <RadioButton
            android:id="@+id/rbDmitriMendeleev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dmitri Mendeleev" />

        <RadioButton
            android:id="@+id/rbNitrogen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitrogen (78.08%)" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitrogen (78.08%)" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nitrogen (78.08%)" />
    </RadioGroup>


    <!-- Question 3 -->

    <TextView
        style="@style/questionStyle"
        android:text="In which country COVID-19 started?"
        android:textColor="@color/colorPrimaryDark"/>


    <CheckBox
        android:id="@+id/nit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="China" />

    <CheckBox
        android:id="@+id/Ni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Italy" />

    <CheckBox
        android:id="@+id/N"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UK" />


    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit" />
</LinearLayout>